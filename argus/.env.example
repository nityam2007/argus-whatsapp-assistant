# ============================================
# Argus — Environment Configuration
# ============================================
# Copy this file: cp .env.example .env
# Then fill in GEMINI_API_KEY (required)
#
# Docker: docker compose up -d
# Dev:    npm run dev
# ============================================

# Environment
NODE_ENV=development
PORT=3000

# Timezone
TIMEZONE=Asia/Kolkata

# Database (SQLite)
# Docker uses /app/data/events.db (set in compose)
DATABASE_PATH=./data/events.db

# Hot window for context matching (days)
HOT_WINDOW_DAYS=90

# ===========================================
# Gemini Configuration (REQUIRED)
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/openai

# ===========================================
# Evolution API (WhatsApp Bridge)
# ===========================================
# Dev: http://localhost:8080
# Docker: http://evolution-api:8080 (set in compose)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=rmd_evolution_api_key_12345
# Instance name — Argus auto-creates this on startup
# Change this if you want a different name
EVOLUTION_INSTANCE_NAME=argaus

# ===========================================
# Evolution PostgreSQL (direct read access)
# ===========================================
# Dev: localhost
# Docker: postgres (set in compose)
EVOLUTION_PG_HOST=localhost
EVOLUTION_PG_PORT=5432
EVOLUTION_PG_DATABASE=evolution
EVOLUTION_PG_USER=postgres
EVOLUTION_PG_PASSWORD=postgres
# Schema where Evolution API Prisma tables live (default: evolution_api)
# EVOLUTION_PG_SCHEMA=evolution_api

# ===========================================
# Docker Compose Overrides (optional)
# ===========================================
# POSTGRES_PASSWORD=postgres
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# EVOLUTION_PORT=8080

# ===========================================
# Message Processing Options
# ===========================================
PROCESS_OWN_MESSAGES=true
SKIP_GROUP_MESSAGES=false
